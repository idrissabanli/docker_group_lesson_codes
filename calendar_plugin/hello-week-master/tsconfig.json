{
  "compilerOptions": {
    "rootDir": "src/",
    "outDir": "dist/",
    "declarationDir": "types/",
    "declaration": true,
    "target": "esnext",
    "module": "esnext",
    "sourceMap": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "checkJs": true
  },
  "include": ["src/"],
  "exclude": ["node_modules", "dist", "types", "__tests__"]
}
